<section>
        <div class="container mt-5">
            <div class="row ">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card " style="width: 15rem; height:25rem">
                        <img src='/product-images/{{this.product._id}}.jpg'
                            class="card-img-top mt-4" alt="{{name}}"
                            style="height: 14rem;">
                        <div class="card-body">
                            <h5 class="text-center card-title ">{{product.Name}}</h5>
                            <p class="text-center card-text">Rs {{product.Price}}</p>    
                            <p class="text-center card-text">Quantity: {{quantity}}</p>                     
                        
                        </div>
                    </div>
                </div>
                {{/each}}
                
            </div>
        </div>
    </section>