

<section>
        <div class="container mt-5 p-3">
            <div class="row">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:25rem">
                        <img class="card-img-top mt-3"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap"
                            style="height: 12rem;">
                        <div class="card-body">
                            <h5 class="text-center card-title">{{this.Name}}</h5>
                            <p class="text-center card-text">Rs.{{this.Price}}</p>
                            <p class="text-center card-text">{{this.Description}}</p>
                            <div class="pl-5">
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add to cart</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                </div>
            </div>
        </div>
    </section>


  
  
